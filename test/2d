from art_of_geometry.euclid.r2.point import Pt, PtAtInf
from art_of_geometry.euclid.r2.line import Ln, Ray, Seg


A = Pt(name='A'); print(A)
B = Pt(name='B'); print(B)
C = Pt(name='C'); print(C)
D = Pt(name='D'); print(D)


P = Pt(name='P'); print(P)
d = PtAtInf(P, name='d'); print(d)
_d = PtAtInf(-P, name='_d'); print(_d)


lnAB = Ln(A, B); print(lnAB)
lnAd = Ln(A, d); print(lnAd)

lnCD = Ln(C, D); print(lnCD)
lnCd = Ln(C, d); print(lnCd)


lnAB_x_lnAd = lnAB.line_intersection(lnAd); print(lnAB_x_lnAd)
lnAB_x_lnCD = lnAB.line_intersection(lnCD); print(lnAB_x_lnCD)
lnAd_x_lnCD = lnAd.line_intersection(lnCD); print(lnAd_x_lnCD)
lnAd_x_lnCd = lnAd.line_intersection(lnCd); print(lnAd_x_lnCd)


rayAB = Ray(A, B); print(rayAB)
rayAd = Ray(A, d); print(rayAd)
rayA_d = Ray(A, _d); print(rayA_d)


segAB = Seg(A, B); print(segAB)
